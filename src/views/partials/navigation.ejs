<header class="mt-2 p-2 text-bg-dark">
  <div class="container">
    <nav class="navbar navbar-expand-md navbar-dark">
      <!-- Logo -->
      <a href="/" class="navbar-brand">
        <img src="img/logo.png" alt="Logo" width="75" height="36" class="d-inline-block align-text-center" />
        <span>Sprint Postgres</span>
      </a>
      <!-- Menu hamburguesa -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>      
     <!-- Menu -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link text-white" href="/">Home</a>
            </li>
            <% if (authenticated) { %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/students">Students</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/bank">Bank</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/users">Users</a>
            </li>
            <span>
              <a href="/logout" class="btn btn-danger btn-sm mt-1 me-2">
                <i class="bi bi-box-arrow-right"></i> Salir
              </a>
            </span>
              
            <% } else { %>
            
            <!-- -------------------------------- login -------------------------------- -->
            <div class="ms-2 text-end d-flex">
              <div class="dropdown">
                <button type="button" class="btn btn-outline-warning mt-1 me-2 dropdown-toggle btn-sm" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside" data-bs-offset="10,20">
                  <i class="bi bi-box-arrow-in-right"> Login</i>
                </button>                   
                <div class="dropdown-menu dropstart bg-dark text-white p-3 dropdown-menu-lg" style="width: 350px;">
                  <form class="px-2 py-2" method="POST" action="/login">
                    <div class="mb-3">
                      <label for="email" class="form-label">Email:</label>
                      <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="mb-3">
                      <label for="password">Contraseña</label>
                      <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="mb-3">
                      <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="dropdownCheck">
                        <label class="form-check-label" for="dropdownCheck">Recordarme</label>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-md w-100">Iniciar Sesión</button>
                  </form>
                  <a class="dropdown-item text-white text-sm" href="#">Olvidaste la contraseña?</a>
                </div>
              </div>
            </div>
      
            <% } %>
          </ul>
        </div>

        <!-- ----------------------------- registarase ----------------------------- -->
          <!-- Dropdown para registrarse -->
        <div class="dropdown">
          <button type="button" class="btn btn-outline-success me-2 dropdown-toggle btn-sm" id="registerDropdownButton" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside" data-bs-offset="10,20">
            Registrarse
          </button>
          <div class="dropdown-menu dropstart bg-dark text-white p-3 dropdown-menu-lg" style="width: 350px;" aria-labelledby="registerDropdownButton">
            <form class="px-2 py-2" method="POST" action="/users">
              <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label>
                <input
                  type="text"
                  class="form-control"
                  id="nombre"
                  name="nombre"
                  placeholder="Nombre"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="apellido" class="form-label">Apellido:</label>
                <input
                  type="text"
                  class="form-control"
                  id="apellido"
                  name="apellido"
                  placeholder="Apellido"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Email"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <div class="mb-3">
                <label for="confirm-password">Confirmar Contraseña</label>
                <input type="password" class="form-control" id="confirm-password" name="confirmPassword" required>
              </div>
              <button type="submit" class="btn btn-success btn-md w-100">Registrarse</button>
            </form>
          </div>
        </div>

      </div>
  </div>
</header>
