<div class="col-8">
    <h4 class="my-4 text-white text-center">Usuarios</h4>
    <table class="table table-dark table-striped">
      <thead>
        <tr class="text-warning">
          <th>ID</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Email</th>
          <th>Edit</th>
        <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach((usuario) => { %>
          <tr
            data-id="<%= usuario.id %>"
            data-nombre="<%= usuario.nombre %>"
            data-apellido="<%= usuario.apellido %>"
            data-email="<%= usuario.email %>"
          >
            <td class="text-warning"><%= usuario.id %></td>
            <td><%= usuario.nombre %></td>
            <td><%= usuario.apellido %></td>
            <td><%= usuario.email %></td>
            <td>
              <button
                type="button"
                class="btn btn-warning btn-sm btn-edit-user"
                data-id="<%= usuario.id %>"
              >
                <i class="bi bi-pencil"></i>
              </button>
            </td>
            <td>
              <button
              form="delete-form-<%= usuario.id %>"
              type="submit"
              class="btn btn-danger btn-sm btn-delete-user"
              title="Eliminar"
            >
              <i class="bi bi-trash"></i>
            </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
      
    </table>
  </div>
  